- (void)clickSecondBtnAction:(UIButton*)btn{
    if(self.pageIndex == 0){
        [self addShopingCart:btn];
    }else if(self.pageIndex == 1) {//试听页面
        [self tryToLearnAction:btn];
    }else if(self.pageIndex == 2){
        [self collectAction:btn];
