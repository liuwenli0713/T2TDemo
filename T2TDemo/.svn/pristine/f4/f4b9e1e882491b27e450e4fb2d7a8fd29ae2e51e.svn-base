#import "LWLBottomView.h"

#define k_Width (kScreenWidth-110)/self.bottomArray.count
#define kLineColor RGB(219, 219, 219, 1)
@interface LWLBottomView()
@property(nonatomic,assign)CGFloat kDefaultWidth;
